<p>
	<strong>Title:</strong>
	<%= @post.title %>
</p>
<p>
	<strong>Text:</strong>
	<%= Kramdown::Document.new(@post.text).to_html.html_safe %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Back', posts_path %>
<%= link_to 'Edit', edit_post_path(@post) %>
