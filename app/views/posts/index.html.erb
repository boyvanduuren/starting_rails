<div id="content">
    <% @posts.each do |post| %>
    <div class="post">
        <div class="timestamp">
            <%= l post.created_at, format: :no_tz %>
        </div>
        <div class="title">
            <%= post.title %>
        </div>
        <div class="space"></div>
        <div class="message">
            <%= Kramdown::Document.new(post.text).to_html.html_safe %>
        </div>
    </div>
    <% end %>
</div>
