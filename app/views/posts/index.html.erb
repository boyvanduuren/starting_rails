<div id="content">
    <% @posts.each do |post| %>
    <div class="post">
        <div class="timestamp">
            <%= l post.created_at, format: :no_tz %>
        </div>
        <div class="title">
            <%= post.title %>
        </div>
        <div class="space"></div>
        <div class="message">
            <%= Kramdown::Document.new(post.text).to_html.html_safe %>
            <p>
            <%= link_to 'Show', post %>, <%= link_to 'Edit', edit_post_path(post) %>, 
            <%= link_to 'Delete', post_path(post),
		method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    </div>
    <% end %>
</div>
